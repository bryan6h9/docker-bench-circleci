        }

        stage('Build') {
            steps {
                echo 'Build step goes here!'
                // Aquí puedes agregar más comandos relacionados al proyecto
            }
        }

        stage('Test') {
            steps {
                echo 'Testing step goes here!'
                // Aquí puedes agregar pruebas específicas
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deployment step goes here!'
                // Añade los pasos de despliegue aquí si aplica
            }
        }
    }

    post {
        success {
            echo 'Pipeline completed successfully.'
        }
        failure {
            echo 'Pipeline failed.'
        }
    }
}
